@if (athlete != null)
{
    <div>
        @athlete.Avatar
        @athlete.FirstName  imię
        @athlete.LastName   nazwisko
        @athlete.Area   dziedzina: skoczek
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Competition</th>
                <th>Score</th>
                <th>Mark</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var competition in athlete.Competition)
            {
                <tr>
                    <td>@competition.Term</td>
                    <td>@competition.Name</td>
                    <td> wynik </td>
                    <td> ocena </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Competition</th>
                <th>Score</th>
                <th>Mark</th>
            </tr>
        </thead>
    </table>
}

